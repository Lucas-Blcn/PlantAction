<div class="text-center mt-5">
  <h1>La <%=@plant.title%></h1>
</div>

<div class="container mt-5">
  <div class="row justify-content-center">
      <div class="col-md-6 mb-5">
        <div class="card mx-auto" style="width: 18rem;">
            <% @plant.photos.each do |photo| %>
              <%= cl_image_tag photo.key, crop: :fill, class: "plant-img" %>
            <% end %>
          <div class="card-body">
              <h1><%= @plant.title %></h1>
              <p class="card-text">Catégorie: <%= @plant.category %></p>
              <p class="card-text"><%= @plant.price %> €/mois</p>
          </div>
        </div>
      </div>
  </div>
</div>

